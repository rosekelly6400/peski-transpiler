
# The top level rule indicates how to link everything together into bminor

peski: main.o scanner.o parser.o expr.o stmt.o type.o param_list.o decl.o hash_table.o scope.o symbol.o
	gcc main.o scanner.o parser.o expr.o stmt.o type.o param_list.o decl.o hash_table.o scope.o symbol.o -o peski -lm

# This pattern indicates that any .o file depends
# upon the .c file of the same name, and all of the .h files.
# So, if a .o file is needed, it is built automatically.

%.o: %.c *.h
	gcc -Wall -c $< -o $@ -g

# Only the files generated by flex and bison need explicit rules.

scanner.c: calc.flex parser.h
	flex -oscanner.c calc.flex

parser.c parser.h: calc.bison
	bison --defines=parser.h --output=parser.c -v calc.bison

# clean causes all intermediate files to be deleted.

clean:
	rm -f parser.* parser.output scanner.c *.o peski
